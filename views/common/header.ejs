<header>

    <nav class="navbar navbar-dark bg-dark">
        <ul class="nav col-12 justify-content-between me-auto mb-2 mb-lg-0">
            <div class="nav">

                <li class="nav-item mx-2">
                    <a class="nav-link text-white" href="/">Accueil</a>
                </li>
                <% if(isAdmin){%>
                <li class="nav-item mx-2">
                    <a class="nav-link text-white" href="/download">Téléchargement</a>
                </li>
                <li class="nav-item mx-2">
                    <a class="nav-link text-white" href="/tchat">Tchat</a>
                </li>
                <%}%>
                <li class="nav-item mx-2">
                    <a class="nav-link text-white" href="/404">Error 404 </a>
                </li>
            </div>
            <div class="nav ">

                <li class="nav-item mx-2">
                    <!-- <a class="nav-link" href="/login">Connexion</a> -->
                    <% if(isAdmin){%>
                <a href="/logout">
                    <button class="btn text-white">
                        Déconnexion
                    </button>
                </a>
                <%} else {%>
                <a href="#">
                    <button class="btn text-white" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Connexion
                    </button>
                </a>
                <%}%>
                </li>
            </div>
        </ul>
    </nav>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Connexion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/login" method="POST">
                    <div class="modal-body">
                        <div class="form-floating mb-3">
                            <input type="text" id="username" name="username" class="form-control" placeholder="Nom de compte" required />
                            <label for="username">Nom de Compte</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" id="password" name="password" class="form-control" placeholder="Mot de passe" required />
                            <label for="password">Mot de Passe</label>
                        </div>
                        <%if (loginError) {%>
                <p>Le mot de passe est incorrect</p>
                <%}%>
                        </div>
                        <div class="modal-footer justify-content-center">
                            <input type="submit" class="btn btn-primary col-5" value="se connecter">
                        </div>
                </form>
            </div>
        </div>
    </div>
</header>